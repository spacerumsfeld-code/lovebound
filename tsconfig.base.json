{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "types": ["node"],
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": false,
        "esModuleInterop": true,
        "target": "es2015",
        "strict": true,
        "module": "es2015",
        "lib": ["es2020", "dom"],
        "jsx": "preserve",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "useUnknownInCatchVariables": false,
        "baseUrl": ".",
        "paths": {
            "@web/*": ["apps/web/*"],
            "@server": ["apps/server/index.ts"],
            "@client-types/*": ["libs/core/src/*"],
            "@core": ["libs/core/index.ts"],
            "@clients/*": ["libs/clients/src/*"],
            "@utils": ["libs/utils/index.ts"]
        }
    },
    "references": [
        {
            "path": "./apps/server/tsconfig.json"
        },
        {
            "path": "./apps/web/tsconfig.json"
        },
        {
            "path": "./libs/clients/tsconfig.json"
        },
        {
            "path": "./libs/core/tsconfig.json"
        },
        {
            "path": "./libs/functions/tsconfig.json"
        },
        {
            "path": "./libs/utils/tsconfig.json"
        }
    ],
    "include": ["**/sst-env.d.ts"],
    "exclude": ["node_modules"]
}
